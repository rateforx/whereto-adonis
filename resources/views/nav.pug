block nav
    nav.navbar.navbar-static-top.navbar-default(role='navigation')
        .container
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse',  aria-expanded='false', aria-controls='navbar')
                a.navbar-brand(href='/') WhereTo
            .collapse.navbar-collapse

                ul.nav.navbar-nav
                    +nav_item('/orders') Orders
                    //-+nav_item("about") About
                    +nav_item("/contact") Contact

                ul.nav.navbar-nav(style='float: right')

                    unless session.user
                        +nav_item('/users/register', 'btn-info')
                            +icon('pencil')
                            | Sign up
                        +nav_item('/users/login', 'btn-success')
                            +icon('log-in')
                            | Login

                    else
                        +nav_item('/users/profile')
                            +icon('user')
                            | You are logged as #{session.user.type} #{session.user.name}.
                        +nav_item('/users/logout', 'btn-danger')
                            +icon('log-out')
                            | Logout